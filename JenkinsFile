pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'tasky-frontend-pipeline-frontend:latest'
        DOCKER_REPO = 'nitishrai7070/tasky-frontend:v1'
        DOCKER_REGISTRY_URL = 'https://index.docker.io/v1/'
        DOCKER_CREDENTIALS = 'dockerhub-credentials' 
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        
        stage('Clone Repo') {
            steps {
                script {
                    git branch: 'master', url: 'https://github.com/Nitishrai1/Frontend'
                }
            }
        }
        
        stage('Docker Compose Down') {
            steps {
                script {
                    bat 'docker compose down'
                }
            }
        }

        stage('Docker Compose Build') {
            steps {
                script {
                    bat 'docker compose build'
                }
            }
        }

        stage('Tag Image') {
            steps {
                script {
                    
                    def imageExists = sh(script: "docker images | grep '${DOCKER_IMAGE}'", returnStatus: true) == 0
                    if (!imageExists) {
                        error "Image ${DOCKER_IMAGE} does not exist!"
                    }
                    
                  
                    bat "docker tag ${DOCKER_IMAGE} ${DOCKER_REPO}"
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: DOCKER_CREDENTIALS, url: DOCKER_REGISTRY_URL]) {
                        echo "Logging in to DockerHub"
                        bat "docker push ${DOCKER_REPO}"
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()  
        }
    }
}
