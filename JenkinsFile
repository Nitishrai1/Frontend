pipeline {
    agent any

    environment {
        IMAGE_NAME = "nitishrai7070/tasky-frontend"
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning repository...'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:v1")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'my-dockerhub-login') {
                        docker.image("${IMAGE_NAME}:v1").push()
                    }
                }
            }
        }
    }
}
