pipeline {
    agent any

    environment {
        IMAGE_NAME = "nitishrai7070/tasky-frontend"
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning repository...'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def img = docker.build("${IMAGE_NAME}:v3")
                    
                    env.IMG_REF = "${IMAGE_NAME}:v3"
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v3/', 'dockerhub-credentials') {
                        docker.image(env.IMG_REF).push()
                    }
                }
            }
        }
    }
}
