pipeline {
    agent any

    environment {
        IMAGE_NAME = 'nitishrai7070/tasky-frontend'
        TAG = 'v1'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/Nitishrai1/Frontend', branch: 'master'
            }
        }

        stage('Docker Compose Down') {
            steps {
                script {
                    bat 'docker compose down'
                }
            }
        }

        stage('Docker Compose Build') {
            steps {
                script {
                    bat 'docker compose build'
                }
            }
        }

        stage('Tag Image') {
            steps {
                script {
                    bat "docker tag tasky_frontend nitishrai7070/tasky-frontend:v1"

                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'dockerhub-credentials', url: 'https://index.docker.io/v1/']) {
                        echo "loggin to docker hub"
                        bat "docker push nitishrai7070/tasky-frontend:v1"
                    }
                }
            }
        }
    }
}
